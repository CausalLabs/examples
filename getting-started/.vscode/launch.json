{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Chrome to localhost",
      "request": "attach",
      "port": 9222,
      "type": "pwa-chrome",
      "url": "http://localhost:3000/*",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach Chrome to local.test",
      "request": "attach",
      "port": 9222,
      "type": "pwa-chrome",
      "url": "http://local.test:3000/*",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against local.test",
      "url": "http://local.test:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node Attach",
      "cwd": "${workspaceFolder}",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
